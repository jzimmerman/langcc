        }
        os << "...\\n";
        Int N_base = A.N_ - 64;
        for (Int i = 0; i _LT_ 64; i++) {
            os << byte_to_hex(A.v_[N_base + i]);
            pr_buffer_sep(os, i);
        }
    }
