    fmt(os, "Buffer[{}]:\\n", A.N_);
    if (A.N_ <= 256L + 64L) {
        for (Int i = 0; i _LT_ A.N_; i++) {
            os << byte_to_hex(A.v_[i]);
            pr_buffer_sep(os, i);
